// File: settings.json
//
// editor.wordwrap:
// * https://code.visualstudio.com/updates/v1_10#_word-wrap-settings-redesign
// * https://stackoverflow.com/a/66434593/5051940
{
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "cmake.useCMakePresets": "always",
    "cSpell.customDictionaries": {
        "global-words": {
            "name": "global-words",
            "path": "${env:HOME}/.local/share/cspell/global-words.txt",
            "addWords": true,
            "scope": "user"
        }
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "doxdocgen.cpp.dtorText": "Destruct a {name} object",
    "doxdocgen.file.copyrightTag": [
        "@copyright Â© {year} James D. Fischer"
    ],
    "doxdocgen.file.fileOrder": [
        "file",
        "author", 
        "brief",
        "version",
        "date",
        "empty",
        "copyright"
    ],
    "doxdocgen.file.versionTag": "@version 2026SP",
    "doxdocgen.generic.authorEmail": "fischerjd@missouri.edu",
    "doxdocgen.generic.authorName": "James D. Fischer",
    "doxdocgen.generic.splitCasingSmartText": false,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.fontSize": 14,
    "editor.hover.above": false,
    "editor.indentSize": "tabSize",
    "editor.mouseWheelZoom": true,
    "editor.quickSuggestions": {
        "other": "off",
        "comments": "off",
        "strings": "off"
    },
    "editor.rulers": [ 75 ],
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 75,
    "files.associations": {
        "*.cc": "cpp",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.tcc": "cpp",
        "algorithm": "cpp",
        "any": "cpp",
