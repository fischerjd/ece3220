    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "never",
    "rewrap.autoWrap.enabled": false,
    "rewrap.wholeComment": false,
    "terminal.integrated.cwd": "${fileDirname}",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.mouseWheelZoom": true,
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash",
            "args": ["--login"]
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    "vim.disableExtension": true,
    "vim.textwidth": 75,
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            "editor.lineHighlightBackground": "#312b1e",
            "editor.lineHighlightBorder": "#666666"
        },
        "[Default Light+]": {
            "editor.lineHighlightBackground": "#fff4e2",
            "editor.lineHighlightBorder": "#eeeeee"
        }
    },
    "workbench.colorTheme": "Default Light+",
    "workbench.preferredHighContrastColorTheme": "Default High Contrast Light",
    "workbench.preferredLightColorTheme": "Default Light+",
    "[c][cpp]": {
        "editor.wordWrap": "off"
    },
    "[html]": {
        "editor.wordWrap": "on"
    },
    "[json]": {
        "editor.wordWrap": "on"
    },
    "[markdown]": {
        "editor.wordWrapColumn": 75,
        "editor.wordWrap": "wordWrapColumn"
    },
    
    // Code Spell Checker words for this user profile. To define workspace 
    // specific words, add "cSpell.words": [ "word", "word", ... ] within
    // the workspace's 'settings.json' file.  [Note that a profile uses
    // 'cSpell.userWords' whereas a workspace uses 'cSpell.words'.]
    // https://marketplace.visualstudio.com/items?itemName=streetsidesoftware.code-spell-checker
    "cSpell.userWords": [
        "doormouse",
        "imager",
        "pawprint",
        "sdcard"
