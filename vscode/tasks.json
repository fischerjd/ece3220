{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "[ECE3220] Build C File (gcc)",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-std=c17",
				"-ggdb",
				"-O0",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"detail": "compiler: /usr/bin/gcc"
		},
		{
			"type": "cppbuild",
			"label": "[ECE3220] Build C++ File (g++)",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-std=c++17",
				"-ggdb",
				"-O0",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"label": "[ECE3220] Build Project",
			"type": "shell",
			"command": "/usr/bin/make",
			"args": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${fileDirname}",
				"env": {
					"DEBUG": "1"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": []
		}
	]
}
