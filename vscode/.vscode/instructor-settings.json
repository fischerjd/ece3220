// [workspace: ~/tmp/] settings.json
//
// editor.wordwrap:
// * https://code.visualstudio.com/updates/v1_10#_word-wrap-settings-redesign
// * https://stackoverflow.com/a/66434593/5051940
{
    "cmake.useCMakePresets": "always",
    "cSpell.customDictionaries": {
        "custom-dictionary-user": {
            "name": "custom-dictionary-user",
            "path": "~/.local/share/cspell/custom-dictionary-user.txt",
            "addWords": true,
            "scope": "user"
        }
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "doxdocgen.file.copyrightTag": [
        "@copyright Copyright {year} James D. Fischer"
    ],
    "doxdocgen.file.fileOrder": [
        "file",
        "author", 
        "brief",
        "version",
        "date",
        "empty",
        "copyright"
    ],
    "doxdocgen.file.versionTag": "@version 2026SP",
    "doxdocgen.generic.authorEmail": "fischerjd@missouri.edu",
    "doxdocgen.generic.authorName": "James D. Fischer",
    "doxdocgen.generic.splitCasingSmartText": false,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.hover.above": false,
    "editor.mouseWheelZoom": true,
    "editor.quickSuggestions": {
        "other": "off",
        "comments": "off",
        "strings": "off"
    },
    "editor.rulers": [ 75 ],
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 75,
    "files.associations": {
        "*.cc": "cpp",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.tcc": "cpp",
        "algorithm": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
        "chrono": "cpp",
        "cinttypes": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "codecvt": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "condition_variable": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "exception": "cpp",
        "fstream": "cpp",
        "functional": "cpp",
        "initializer_list": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "iterator": "cpp",
        "limits": "cpp",
        "list": "cpp",
        "map": "cpp",
        "memory_resource": "cpp",
        "memory": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "numbers": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "ostream": "cpp",
        "random": "cpp",
        "ranges": "cpp",
        "ratio": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "stop_token": "cpp",
        "streambuf": "cpp",
        "string_view": "cpp",
        "string": "cpp",
        "system_error": "cpp",
        "thread": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "typeinfo": "cpp",
        "unordered_map": "cpp",
        "utility": "cpp",
        "vector": "cpp",
    },
    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "never",
    "rewrap.autoWrap.enabled": false,
    "rewrap.wholeComment": false,
    "terminal.integrated.cwd": "${fileDirname}",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.mouseWheelZoom": true,
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash",
            "args": ["--login"]
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    "vim.disableExtension": true,
    "vim.textwidth": 75,
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            "editor.lineHighlightBackground": "#312b1e",
            "editor.lineHighlightBorder": "#666666"
        },
        "[Default Light+]": {
            "editor.lineHighlightBackground": "#fff4e2",
            "editor.lineHighlightBorder": "#eeeeee"
        }
    },
    "workbench.colorTheme": "Default Light+",
    "workbench.preferredHighContrastColorTheme": "Default High Contrast Light",
    "workbench.preferredLightColorTheme": "Default Light+",
    "[c][cpp]": {
        "editor.wordWrap": "off"
    },
    "[html]": {
        "editor.wordWrap": "on"
    },
    "[json]": {
        "editor.wordWrap": "on"
    },
    "[markdown]": {
        "editor.wordWrapColumn": 75,
        "editor.wordWrap": "wordWrapColumn"
    },
    
    // Code Spell Checker words for this user profile. To define workspace 
    // specific words, add "cSpell.words": [ "word", "word", ... ] within
    // the workspace's 'settings.json' file.  [Note that a profile uses
    // 'cSpell.userWords' whereas a workspace uses 'cSpell.words'.]
    // https://marketplace.visualstudio.com/items?itemName=streetsidesoftware.code-spell-checker
    "cSpell.userWords": [
        "imager"
    ],

    // Words to be ignored and not suggested.
    "cSpell.ignoreWords": [
        "cerr",
        "cin",
        "cout",
        "Doxyfile",
        "eecspi",
        "endl",
        "getopt",
        "gpiochip",
        "gpiod",
        "GPIOD",
        "gpiodcxx",
        "GPIODCXX",
        "iomanip",
        "libgpiodcxx",
        "lopts",
        "pawprint",
        "pawrint",
        "pigpio",
        "PIGPIO",
        "RAII",
        "ROOTFS",
        "rpab",
        "rpifs",
        "RPIFS",
        "sdcard",
        "sopts",
        "usermod",
        "WIRINGPI",
        "wiringPi"
    ]
}